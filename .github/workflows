name: C/C++ CI

on:
  push:
    branches: [ $default-branch ]
  pull_request:
    branches: [ $default-branch ]

jobs:
  build:

    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
    - name: build configure
      run: g++ --std=c++20 ./configure.cc -o configure
    - name: configure
      run:  ./configure
    - name: ninja
      run: ninja
